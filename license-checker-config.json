{
  "defaultFormat": {
    "eachLine": {
      "prepend": "# "
    }
  },
  "ignore": [
    "*",
    "**/.gitignore",
    "**/*.hbs",
    "**/*.local",
    "**/*.local",
    "**/*.local.*",
    "**/*.template",
    "**/*.tfstate",
    "**/.terraform.lock.hcl",
    "**/.terraform/*",
    ".github/",
    ".lefthook/",
    ".rollup.cache/",
    "_credentials.txt",
    "license.txt"
  ],
  "ignoreFile": "./.gitignore",
  "license": "src/license.txt",
  "licenseFormats": {
    "acl|as|babelrc|c|cjs|config|cpp|css|cto|go|hcl|java|js|less|mjs|overrides|php|scss|tf|ts|tsx|variables": {
      "append": "*/\n",
      "prepend": "/*"
    },
    "hbs|html|xml|svg": {
      "append": "-->\n",
      "prepend": "<!--"
    },
    "md|mdx": {
      "eachLine": {
        "append": " '",
        "prepend": "[//]: # ' "
      }
    },
    "pu": {
      "append": "'/\n",
      "prepend": "/'"
    }
  }
}
