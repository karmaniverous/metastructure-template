    dynamodb_table = "{{terraform.state.lock_table}}" 
    encrypt = true 
    key = "{{terraform.state.key}}"
    region = "{{organization.aws_region}}" 
    workspace_key_prefix = "workspaces" 
  } {{~/if}}
